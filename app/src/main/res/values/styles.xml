<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView">
        <item name="cardCornerRadius">@dimen/container_corner_radius_medium</item>
        <item name="android:padding">@dimen/container_padding</item>
        <item name="background">@color/colorBackgroundLight</item>
        <item name="elevation">4dp</item>
        <item name="android:layout_margin">@dimen/container_outer_margin</item>
    </style>

</resources>